  "license": "MIT",
  "devDependencies": {
    "@drozdik.m/unit-test": "^1.5.0",
    "@drozdik.m/web-unit-test": "^1.2.5"
  },
  "dependencies": {
    "@drozdik.m/common-mixins": "^1.0.4"
  }
}
